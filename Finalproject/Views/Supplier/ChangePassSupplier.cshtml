@model Finalproject.Models.PasswordChangeModel
@{
    ViewBag.Title = "ChangePassSupplier";
}



<div class="row">
    <div class="col-lg-3">
        @{
            Html.RenderPartial("SupplierPartial");
        }
    </div>
    @using (Html.BeginForm("PostSupplierPass", "Supplier", FormMethod.Post))
    {
                
        <div class="col-lg-9">
            <h3 style="color:white;">Change Your Password! </h3><br/>
            
            <div class="form-group">
                <label>Old Password</label><label style="color:darkolivegreen"> *</label>
                @Html.PasswordFor(a => a.OldPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(a=>a.OldPassword,"",new { @class = "text-danger",style="color:white;" })

            </div>
            <div class="form-group">
                <label>New Password</label><label style="color:darkolivegreen"> *</label>
                @Html.PasswordFor(a => a.NewPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.NewPassword, "",new { @class = "text-danger",style="color:white;" })
            </div>

            <div class="form-group">
                <label>Confirm Password</label><label style="color:darkolivegreen"> *</label>
                @Html.PasswordFor(a => a.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.ConfirmPassword, "",new { @class = "text-danger",style="color:white;" })
            </div>

            <div class="form-group">
                <label></label>
                <input type="Submit" value="Reset" class="btn btn-success" />
            </div>
            <div style="text-decoration-color:brown;">
                <p style="text-decoration-color:darkblue;">@ViewBag.Message</p>
            </div>
        </div>

    }
</div>