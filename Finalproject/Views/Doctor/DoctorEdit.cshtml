@model Finalproject.Models.DoctorModel
@{
    ViewBag.Title = "DoctorEdit";
}


<div class="row">
    <div class="col-lg-3">

        @{
            Html.RenderPartial("DoctorPartial");
        }

    </div>
 @using (Html.BeginForm("PostDoctorEdit", "Doctor", FormMethod.Post))
 {      @*@Html.HiddenFor(a=>a.SpecializedId)*@
        <div class="col-lg-9">
            <h3 style="color:white">Edit Your Profile</h3>
            <br />
            <div class="form-group">
                <label>First Name</label><label style="color:darkolivegreen"> *</label>
                @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.FirstName, "", new { @class = "text-danger",style="color:white" })

            </div>

            <div class="form-group">
                <label>Last Name</label><label style="color:darkolivegreen"> *</label>
                @Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.LastName, "", new { @class = "text-danger",style="color:white" })

            </div>

            <div class="form-group">
                <label>Total Experience</label><label style="color:darkolivegreen"> *</label>
                @Html.TextBoxFor(a => a.TotalExperience, new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.TotalExperience, "", new { @class = "text-danger",style="color:white" })

            </div>

            <div class="form-group">
                <label>Specialization</label><label style="color:darkolivegreen"> *</label>
                <div class="form-group">
                    @Html.DropDownListFor(a => a.SpecializedId, Model.doctorlst, "Select", new { @class = "form-control" })
                     @Html.ValidationMessageFor(a => a.SpecializedId, "", new { @class = "text-danger",style="color:white" })
                </div>

            </div>

            <div class="form-group">
                <label>Gender</label><label style="color:darkolivegreen"> *</label><br />
                Male: @Html.RadioButtonFor(a => a.Gender, "Male")
                Female: @Html.RadioButtonFor(a => a.Gender, "Female")

            </div>




            <div class="form-group">
                <label></label>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
            <div>
            @ViewBag.message
            </div>
        </div>
 }
    </div>


